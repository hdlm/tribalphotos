<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:id="@+id/imgvFavoriteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tvTitleFavoriteUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_photo_favorite_title_username"
            android:layout_below="@id/imgvFavoriteItem"
            />


        <TextView
            android:id="@+id/tvFavoriteUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_photo_favorite_username"
            android:layout_alignTop="@+id/tvTitleFavoriteUsername"
            android:layout_toEndOf="@+id/tvTitleFavoriteUsername"
            android:layout_marginStart="4dp"
            />


        <TextView
            android:id="@+id/tvTitleFavoriteInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_photo_favorite_title_info"
            android:layout_below="@id/tvTitleFavoriteUsername"
            />


        <TextView
            android:id="@+id/tvFavoriteInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_photo_favorite_info"
            android:layout_alignTop="@+id/tvTitleFavoriteInfo"
            android:layout_toEndOf="@+id/tvTitleFavoriteInfo"
            android:layout_marginStart="4dp"
            />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
